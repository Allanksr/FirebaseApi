<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cinza</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/branco</item>
    </style>


    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/alert_custom</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>
    </style>

</resources>
