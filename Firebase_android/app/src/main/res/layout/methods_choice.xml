<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_anonymous"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:contentDescription="method"
        app:srcCompat="@drawable/ic_facebook" />

    <Button
        android:id="@+id/btn_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/iv_anonymous"
        android:background="@drawable/button_border_effect"
        android:text="Activity name"
        android:textSize="18sp"
        android:layout_toEndOf="@id/iv_anonymous" />



</RelativeLayout>